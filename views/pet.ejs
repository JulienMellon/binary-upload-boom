<%- include('partials/header') -%>
  

      <div class="card w-96 bg-base-100 shadow-xl">
        <figure><img src="<%= pet.image%>" alt="Shoes" /></figure>
        <div class="card-body">
          <h2 class="card-title">
            <%= pet.name %>
            <div class="badge badge-secondary">NEW</div>
          </h2>
          <div class="card-actions justify-end">
            <div class="badge badge-outline"><%= pet.species %></div> 
            <div class="badge badge-outline">Products</div>
          </div>
        </div>
      </div>

      

<!-- Add Vaccine Form Section -->
      
      <div class="mt-5">
        <h2>Add a vaccine</h2>
        <!-- Vaccines Form needs to include: vaccine image dateAdministered -->
        <form action="/vaccine/createVaccine/" enctype="multipart/form-data" method="POST">
          <div class="mb-3">
            <label for="vaccine" class="form-label">Vaccine</label>
            <input type="text" class="form-control" id="vaccine" name="vaccine" placeholder="vaccine name">
            <input type="date" name="dateAdministered" id="dateAdministered">
            <input type="file" class="form-control" id="imageUpload" name="file">
            <input type="hidden" name="petid" id="petid" value="<%= pet.id %>">
          </div>
          <button type="submit" class="btn btn-primary"> Submit</button>
        </form>
      </div>

